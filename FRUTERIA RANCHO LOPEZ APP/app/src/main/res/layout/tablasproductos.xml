<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lLVTablasProductos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lLYV1TablasProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/tLTablasProductos"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/tRTablasProductos"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tVId_Producto"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:background="#F08080"
                    android:fontFamily="sans-serif"
                    android:text="Id"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tVNombre"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:background="#FFE4E1"
                    android:fontFamily="sans-serif"
                    android:text="Nombre"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tVPrecio"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="#F08080"
                    android:fontFamily="sans-serif"
                    android:text="Precio"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tVStock"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="#FFE4E1"
                    android:fontFamily="sans-serif"
                    android:text="Stock"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tVUnidad"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="#F08080"
                    android:fontFamily="sans-serif"
                    android:text="Unidad"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tVImagenProducto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFE4E1"
                    android:fontFamily="sans-serif"
                    android:text="Imagen"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:id="@+id/tRTablasProductos1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tVId_Productos1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="#FFE4E1"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tVNombre1"
                    android:layout_width="84dp"
                    android:layout_height="50dp"
                    android:background="#F08080"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tVPrecio1"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="#FFE4E1"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tVStock1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="#F08080"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tVUnidad1"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="#FFE4E1"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/iVImagenProducto1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </TableRow>

        </TableLayout>
    </LinearLayout>
</LinearLayout>