<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lLVTablaUsuario"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lLHTablaUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TableLayout
            android:id="@+id/tLTablaUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <TableRow
                android:id="@+id/tRTablaUsuario_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tVIdUsuario_1"
                    android:layout_width="105dp"
                    android:layout_height="40dp"
                    android:background="@drawable/cuadradorojoconbordes"
                    android:text="Id_Usuario"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tVContraseña_1"
                    android:layout_width="105dp"
                    android:layout_height="40dp"
                    android:background="@drawable/cuadradorojoconbordes"
                    android:text="Contraseña"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:id="@+id/tRTablaUsuario_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tVIdUsuario_2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="#FF7F50"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tVContraseña_2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="#F08080"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/tVNombreUsuario_1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/cuadradorojoconbordes"
                    android:text="Nombre Usuario"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tVRol_1"
                    android:layout_width="101dp"
                    android:layout_height="40dp"
                    android:background="@drawable/cuadradorojoconbordes"
                    android:text="Rol"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/tVRol_2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="#FF7F50"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tVNombreUsuario_2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="#F08080"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

</LinearLayout>